<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            >

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_background"
                android:src="@drawable/user"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¿ Hello,"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="22sp"
                android:textColor="@color/primary_dark"
                android:layout_toEndOf="@id/profile_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"/>

            <ImageView
                android:id="@+id/settings_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/setting"
                android:layout_alignParentEnd="true"
                app:tint="@color/primary_dark" />
        </RelativeLayout>

        <!-- Line Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="12dp"
            android:background="@color/line_grey"/>

        <!-- Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ± Common Diseases"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary_dark"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginBottom="8dp"/>

        <!-- Disease Scroll -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Card 1 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card_bg"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/disease1"
                        android:clipToOutline="true"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/mildew"
                        android:scaleType="centerCrop"
                        android:contentDescription="Disease 1"
                        android:background="@drawable/rounded_image"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Downy Mildew"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textColor="@color/primary_dark"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <!-- Card 2 -->
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card_bg"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:id="@+id/disease2"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/leafss"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:contentDescription="Disease 2"
                        android:background="@drawable/rounded_image"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leaf Spot"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textColor="@color/primary_dark"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card_bg"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/root"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_image"
                        android:contentDescription="Root Rot"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Root Rot"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textColor="@color/primary_dark"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card_bg"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/blight"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:background="@drawable/rounded_image"
                        android:contentDescription="Blight"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Blight"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textColor="@color/primary_dark"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card_bg"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/mildew1"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:background="@drawable/rounded_image"
                        android:contentDescription="Downy Mildew"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Powdery Mildew"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textColor="@color/primary_dark"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="220dp"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_card_bg"
                    android:elevation="4dp"
                    android:padding="8dp"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@drawable/rustfungus"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true"
                        android:background="@drawable/rounded_image"
                        android:contentDescription="Rust Fungus"
                        android:clickable="true"
                        android:focusable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rust Fungus"
                        android:fontFamily="@font/poppins_regular"
                        android:textSize="14sp"
                        android:textColor="@color/primary_dark"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
